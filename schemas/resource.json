{
    "id": "/resource.json",
    "title": "Resource",
    "description": "Resource used in a story",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties":
    {
        "metadata": {
          "$ref": "./metadata.json",
          "description": "metadata of the resource"
        },
        "data": {
          "type": ["object", "array"],
          "default": {},
          "description": "data of the resource (depends on context type)"
        }
    },
    "required": ["metadata", "data"]
}